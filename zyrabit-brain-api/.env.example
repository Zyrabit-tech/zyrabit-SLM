# ==============================================
# Zyrabit - Environment Configuration
# ==============================================

# --- General Settings ---
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# --- SLM Provider (Ollama Local) ---
# La URL interna dentro de la red de Docker suele ser http://SLM-server:11434
OLLAMA_BASE_URL=http://SLM-server:11434
MODEL_NAME=phi3

# --- Vector Database (ChromaDB) ---
VECTOR_DB_HOST=vector-db
VECTOR_DB_PORT=8000
COLLECTION_NAME=zyrabit_knowledge_base

# --- Security Sidecar ---
# Habilitar o deshabilitar la sanitizaci√≥n en el API
ENABLE_PII_SANITIZATION=True
SENSITIVITY_LEVEL=HIGH
